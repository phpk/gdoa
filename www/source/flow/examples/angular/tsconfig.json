{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "paths": {
      "@topology/core": ["../../packages/core"],
      "@topology/core/*": ["../../packages/core/src/*"],
      "@topology/flow-diagram": ["../../packages/flow-diagram"],
      "@topology/activity-diagram": ["../../packages/activity-diagram"],
      "@topology/class-diagram": ["../../packages/class-diagram"],
      "@topology/sequence-diagram": ["../../packages/sequence-diagram"],
      "@topology/chart-diagram": ["../../packages/chart-diagram"],
      "@topology/layout": ["../../packages/layout"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
