{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "outDir": "./dist/types",
    "baseUrl": ".",
    "rootDir": "src",
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "paths": {
      "*": ["src/*"]
    }
  },
  "references": [{ "path": "../../packages/core" }],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
